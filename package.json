{
  "name": "@uiw/react-code-preview",
  "version": "4.0.5",
  "description": "Code edit preview for React.",
  "author": "Kenny Wang <wowohoo@qq.com>",
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "scripts": {
    "prepare": "husky install && npm run build",
    "released": "npm run build && npm run doc",
    "doc": "kkt build --app-src ./website",
    "start": "kkt start --app-src ./website",
    "watch": "tsbb watch & npm run css:watch",
    "build": "tsbb build && npm run css:build && npm run css:build:dist",
    "test": "tsbb test --env=jsdom",
    "coverage": "tsbb test --env=jsdom --coverage --bail",
    "css:build": "compile-less -d src -o esm",
    "css:watch": "compile-less -d src -o esm --watch",
    "css:build:dist": "compile-less -d src --combine dist.css --rm-global",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,html,less,md,json}'",
    "map": "source-map-explorer build/static/js/*.js --html build/website-result.html"
  },
  "homepage": "https://uiwjs.github.io/react-code-preview",
  "repository": {
    "type": "git",
    "url": "https://github.com/uiwjs/react-code-preview"
  },
  "files": [
    "src",
    "cjs",
    "esm"
  ],
  "keywords": [
    "uiw",
    "uiwjs",
    "code",
    "code-preview",
    "react-code-preview"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx,ts,tsx,html,less,md,json}": [
      "prettier --write"
    ]
  },
  "peerDependencies": {
    "react": ">=16.9.0",
    "react-dom": ">=16.9.0"
  },
  "devDependencies": {
    "@kkt/less-modules": "^7.0.6",
    "@kkt/raw-modules": "^7.0.6",
    "@kkt/scope-plugin-options": "^7.0.6",
    "@types/babel__standalone": "7.1.4",
    "@types/react": "17.0.38",
    "@types/react-dom": "17.0.11",
    "@types/react-test-renderer": "17.0.1",
    "@uiw/react-github-corners": "1.5.3",
    "@uiw/react-markdown-preview": "3.4.7",
    "@uiw/reset.css": "1.0.5",
    "compile-less-cli": "1.8.11",
    "husky": "7.0.4",
    "kkt": "^7.0.6",
    "lint-staged": "12.1.7",
    "prettier": "2.5.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-test-renderer": "17.0.2",
    "source-map-explorer": "2.5.2",
    "tsbb": "3.5.4",
    "uiw": "4.9.9"
  },
  "dependencies": {
    "@babel/core": "7.16.7",
    "@babel/plugin-transform-classes": "7.16.7",
    "@babel/runtime": "7.16.7",
    "@babel/standalone": "7.16.9",
    "@codemirror/lang-javascript": "0.19.6",
    "@uiw/copy-to-clipboard": "1.0.12",
    "@uiw/react-codemirror": "4.3.3",
    "@uiw/react-codepen": "1.0.2",
    "@uiw/react-codesandbox": "1.1.4",
    "@uiw/react-split": "5.8.7",
    "babel-plugin-transform-remove-imports": "1.7.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
